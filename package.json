{
  "name": "@domfung/litechat",
  "version": "0.0.1-development",
  "description": "",
  "license": "MIT",
  "private": false,
  "scripts": {
    "clean": "rm -rf dist",
    "tailwind": "npx tailwindcss -i ./src/index.css -o ./dist/index.css",
    "pack": "npm pack | grep -E '^.*$' | tail -n 1 > test/latest.txt",
    "build": "npm run clean && mkdir dist && npm run tailwind && tsc -p ./configs/tsconfig.base.json && cp package.json README.md ./dist && npm run pack",
    "publish": "npm publish ./dist --access public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/DominicFung/Litechat.git"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [
    "dist/**/*"
  ],
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.27",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "discord.js": "^14.7.1"
  }
}
